<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.exprod.lexiconcoach.ui.activities.PutVocabularyActivity"
    tools:showIn="@layout/activity_put_vocabulary">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название:"
        />
    <EditText
        android:id="@+id/etTitle"
        android:hint="Введите здесь название вашего словаря (Например, 'Слова, связанные с компьютером')"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание:"/>
    <EditText
        android:id="@+id/etDescription"
        android:hint="Введите здесь краткое описание вашего словаря (Необязательно)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>
